# Configurare mediu
NODE_ENV=staging

# Configurare bază de date
DB_HOST=staging-db.wastewise.internal
DB_PORT=5432
DB_USERNAME=wastewise_staging
DB_PASSWORD=secure_password_here
DB_DATABASE=wastewise_staging
DB_SSL=true

# Configurare Redis
REDIS_HOST=staging-redis.wastewise.internal
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here

# Configurare JWT
JWT_SECRET=secure_jwt_secret_for_staging
JWT_EXPIRATION=1d

# Configurare API
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Configurare frontend
FRONTEND_URL=https://staging.wastewise.example.com

# Configurare MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=secure_minio_password_here
MINIO_ENDPOINT=staging-minio.wastewise.internal
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_BUCKET=wastewise-staging

# Configurare deployment
STAGING_SERVER=staging.wastewise.example.com
STAGING_SSH_PORT=22
STAGING_SSH_USER=deploy
STAGING_DEPLOY_PATH=/var/www/wastewise-staging

# Configurare Kubernetes (dacă se folosește)
K8S_NAMESPACE=wastewise-staging
K8S_DEPLOYMENT_BACKEND=backend
K8S_DEPLOYMENT_FRONTEND=frontend
K8S_SERVICE_BACKEND=backend-service
K8S_SERVICE_FRONTEND=frontend-service
K8S_INGRESS=wastewise-ingress
