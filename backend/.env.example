# Configurare server
PORT=3000
NODE_ENV=development

# Configurare bază de date
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=wastewise

# Configurare bază de date pentru aplicație (utilizator cu drepturi limitate)
# Utilizați aceste credențiale în producție
# DB_USERNAME=wastewise_app
# DB_PASSWORD=app_password_secure

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1d

# Configurare API
API_PREFIX=api
API_VERSION=v1

# Logging
LOG_LEVEL=debug
